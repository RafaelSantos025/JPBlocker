{
    "manifest_version": 2,
    "version":"1.0.0",
    "name":"J.P Blocker",
    "description":"",
    "author":"Joao & Rafa S.A",
    "browser_action":{
        "default_title":"J.P Blocker",
        "default_popup":"content/index.html",
        "default_icon":"icon.png" 
    },
    "permissions":[
        "activeTab"
    ],
    "content_scripts":[
        {
            "matches":[
                "http://*/*",
                "https://*/*"
            ],
            "js":[
                "content/main.js"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://www.googletagmanager.com; object-src 'self'"
}
